# Standard Radierermodus (normal = 0, weiß = 1, ganze Linien = 2)
eraser_mode=2
# Standard Textmarkerfarbe
highlighter_color=yellow
# Standard Textmarkerdicke (fein = 1, mittel = 2, dick = 3)
highlighter_thickness=2
# Textmarker ist standardmäßig im Lineal-Modus (true/false)
highlighter_ruler=false
# Textmarker ist standardmäßig im Umrisserkennungsmodus (true/false)
highlighter_recognizer=false
# Werkzeug auf Taste 2 (pen, eraser, highlighter, text, selectrect, vertspace, hand)
btn2_tool=eraser
# Werkzeug auf Taste 2 ist mit Hauptpinsel verknüpft (true/false) (überschreibt  alle anderen Einstellungen)
btn2_linked=true
# Taste 2 Pinselfarbe (nur für Stift oder Textmarker)
btn2_color=white
# Taste 2 Pinseldicke (nur Stift, Radierer oder Textmarker)
btn2_thickness=2
# Taste 2 Lineal-Modus (true/false) (nur für Stift oder Textmarker)
btn2_ruler=false
# Taste 2 Umrisserkennungsmodus (true/false) (nur Stift oder Textmarker)
btn2_recognizer=false
# Taste 2 Radierermodus (nur Radierer)
