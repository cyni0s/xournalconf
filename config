# Werkzeug auf Taste 3 (pen, eraser, highlighter, text, selectrect, vertspace, hand)
btn3_tool=eraser
# Werkzeug auf Taste 3 ist mit Hauptpinsel verknüpft (true/false) (überschreibt  alle anderen Einstellungen)
btn3_linked=true
# Taste 3 Pinselfarbe (nur für Stift oder Textmarker)
btn3_color=white
# Taste 3 Pinseldicke (nur Stift, Radierer oder Textmarker)
btn3_thickness=2
# Taste 3 Lineal-Modus (true/false) (nur für Stift oder Textmarker)
btn3_ruler=false
# Taste 3 Umrisserkennungsmodus (true/false) (nur Stift oder Textmarker)
btn3_recognizer=false
# Taste 3 Radierermodus (nur Radierer)
btn3_erasermode=2
# Dicke der verschiedenen Stifte (in Punkten, 1 pt = 1/72 in)
pen_thicknesses=0.42;0.85;1.41;2.26;5.67
# Dicke der verschiedenen Radierer (in Punkten, 1 pt = 1/72 in)
